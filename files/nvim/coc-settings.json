{
  "python.pythonPath": "python",
  "languageserver": {
    "pyright": {
      "command": "pyright-langserver",
      "args": ["--stdio"],
      "filetypes": ["python"],
      "initializationOptions": {
        "python": {
          "analysis": {
            "typeCheckingMode": "basic",
            "autoSearchPaths": true,
            "useLibraryCodeForTypes": true
          }
        }
      }
    }
  }
}
